# =============================================================================
# PHPMAIL SERVICE CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME="PHPMail Server"
APP_VERSION="1.0.0"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC

# SMTP Configuration (Required)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_ENCRYPTION=tls
SMTP_TIMEOUT=30
SMTP_AUTH=true

# Sender Information (Required)
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="PHPMail Server"

# Security Settings
API_KEY_REQUIRED=false
API_KEY=your-secret-api-key
ALLOWED_DOMAINS=example.com,trusted-domain.com
MAX_ATTACHMENT_SIZE=25000000
RATE_LIMIT_BY_IP=true
TRUSTED_PROXIES=127.0.0.1,10.0.0.0/8

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_MAX_ATTEMPTS=100
RATE_LIMITING_TIME_WINDOW=3600

# Logging
LOGGING_ENABLED=true
LOG_LEVEL=info
LOG_PATH=logs/email.log

# Features
TEMPLATES_ENABLED=true
ATTACHMENTS_ENABLED=true
BATCH_SENDING_ENABLED=true
DELIVERY_CONFIRMATION=false

# Webhook (Optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-site.com/webhook/email

# Queue System (Optional)
QUEUE_ENABLED=false
QUEUE_DRIVER=memory
QUEUE_CONNECTION=